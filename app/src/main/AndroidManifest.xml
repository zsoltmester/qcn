<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="zsoltmester.qcn">

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name">

		<activity
			android:name="zsoltmester.qcn.desktop.DesktopActivity"
			android:icon="@drawable/ic_launcher"
			android:label="@string/app_name"
			android:theme="@style/DesktopTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".qc.QCNotificationActivity"
			android:icon="@drawable/ic_launcher"
			android:label="@string/app_name"
			android:excludeFromRecents="true"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:theme="@style/GreenTheme">
			<intent-filter>
				<action android:name="com.lge.quickcover" />
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>

		<service
			android:name=".notifications.QCNotificationListener"
			android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
			<intent-filter>
				<action android:name="android.service.notification.NotificationListenerService" />
			</intent-filter>
		</service>

		<receiver
			android:name=".qc.QCNotificationActivity$DeviceAdminListener"
			android:permission="android.permission.BIND_DEVICE_ADMIN">
			<meta-data
				android:name="android.app.device_admin"
				android:resource="@xml/device_admin_permissions" />
			<intent-filter>
				<action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
			</intent-filter>
		</receiver>

	</application>
</manifest>
