				<!--android:textSize="@dimen/desktop_caption_size"-->
				<!--android:text="@string/contact_issues" />-->

			<!--<Button-->
				<!--android:layout_width="wrap_content"-->
				<!--android:layout_height="wrap_content"-->
				<!--android:textColor="@color/btn_text"-->
				<!--android:layout_marginStart="@dimen/desktop_margin_horizontal"-->
				<!--android:text="@string/contact_readme" />-->

		<!--</LinearLayout>-->

	</LinearLayout>
</ScrollView>